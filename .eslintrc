{
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "jasmine": true
  },
  "globals": {
    "atom": false,
    "waitsForPromise": false
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "never"],
  },
  "settings": {
    "import/core-modules": ["atom"]
  }
}
